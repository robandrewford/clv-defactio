apiVersion: v1
kind: Service
metadata:
  name: clv-service
  namespace: clv-360
  labels:
    app: clv-service
    environment: ${ENVIRONMENT}
spec:
  type: ClusterIP
  ports:
    - port: 80
      targetPort: 8080
      protocol: TCP
      name: http
  selector:
    app: clv-service
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: clv-service-ingress
  namespace: clv-360
  annotations:
    kubernetes.io/ingress.class: "nginx"
    nginx.ingress.kubernetes.io/ssl-redirect: "true"
    nginx.ingress.kubernetes.io/rewrite-target: /
spec:
  rules:
    - host: clv.your-domain.com
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: clv-service
                port:
                  number: 80
